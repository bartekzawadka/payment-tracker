{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "PaymentTracker": "Server=localhost;Port=5555;Uid=root;Pwd=1234;Database=PaymentTracker"
  },
  "EmailConfiguration": {
    "AppEndpoint": "http://localhost:4200",
    "Server": "smtp.domain.com",
    "Username": "test@example.com",
    "Port": 123,
    "Password": "password",
    "UseSsl": false,
    "FromAddress": "sender@email.com",
    "FromName": "Sender",
    "To": "receiver@email.com"
  },
  "QuartzConfiguration": {
    "Triggers": [
      {
        "Name": "MonthlyPrecursoryNotification",
        "Cron": "0 30 20 L * ?",
        "Type": 1
      },
      {
        "Name": "FirstDayOfMonthReminder",
        "Cron": "0 30 20 1 * ?",
        "Type": 2
      },
      {
        "Name": "SecondDayOfMonthReminder",
        "Cron": "0 30 20 2 * ?",
        "Type": 2
      },
      {
        "Name": "ClosePeriodReminder",
        "Cron": "0 30 20 26 * ?",
        "Type": 3
      }
    ]
  }
}
